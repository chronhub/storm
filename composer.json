{
  "name": "chronhub/storm",
  "description": "foundation",
  "keywords": [
    "message", "stream", "cqrs", "aggregate", "domain driven design", "event sourcing"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "steph bug",
      "email": "chronhubgit@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "psr/container": "dev-master",
    "react/promise": "^2.9",
    "symfony/uid": "6.3.x",
    "symfony/clock": "^6.4",
    "symfony/serializer": "^6.4",
    "ext-pcntl": "*"
  },
  "require-dev": {
    "ext-posix": "*",
    "laravel/pint": "^v1.1",
    "nunomaduro/larastan": "^2.x-dev",
    "nunomaduro/phpinsights": "dev-master",
    "orchestra/testbench": "^8.x-dev",
    "pestphp/pest": "2.x-dev",
    "phpstan/phpstan": "^1.11.x-dev",
    "phpunit/phpunit": "^10.5",
    "rector/rector": "dev-main",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "Chronhub\\Storm\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Chronhub\\Storm\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "pint": "vendor/bin/pint",
    "rector-init": "vendor/bin/rector init",
    "rector-dry": "vendor/bin/rector process --dry-run",
    "rector-process": "vendor/bin/rector process"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev"
}
